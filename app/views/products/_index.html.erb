<%= form_tag(products_path, method: "get") do %>
  <%= collection_select(:search, :category_id, Category.all, :id, :name) %>
  <%= submit_tag "Search" %>
<% end %>

<h1>Top Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="image">
          <% if product.picture.attached? %>
            <%= image_tag product.picture, width: 320, height: 150 %>
          <% end %>
        </div>
        <div class="card-inner">
          <div class="header">
            <h2><%=product.name %></h2>
            <h3><%=product.description %></h3>
          </div>
          <div class="content">
            <tr>
              <td><%= product.price %></td>
              <td><%= product.state %></td>
              <td><%= product.stock %></td>
              <td><%= Category.find(product.category_id).name %></td>
              <td><%= link_to "SHOW", product %></td>
              <% if user_signed_in? && current_user.farmer == product.farmer %>
                <td><%= link_to "DELETE", product , method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            <tr>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
