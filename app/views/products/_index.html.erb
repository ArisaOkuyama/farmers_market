<h1>Top Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="image">
          <% if product.picture.attached? %>
            <%= image_tag product.picture, width: 320, height: 150 %>
          <% end %>
        </div>
        <div class="card-inner">
          <div class="header">
            <h2><%=product.name %></h2>
            <h3><%=product.description %>
            <h3>$<%=product.price %></h3>
          </div>
          <div class="content">
            <tr>
              <td><%= product.state %></td><br>
              <td>Category: <%= Category.find(product.category_id).name %></td><br>
              <td><%= link_to "SHOW", product , class: "btn btn-info" %></td>
              <% if user_signed_in? && current_user.farmer == product.farmer %>
                <td><%= link_to "DELETE", product , method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-info" %></td>
              <% end %>
            <tr>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
