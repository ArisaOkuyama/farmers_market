<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>State:</strong>
  <%= @product.state %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<br>

<% if @product.price %>
  <p>
  <%= number_to_currency @product.price %><br>
  <%= link_to "new_order_path(product_id: @product.id)" , class: "link-buy" do %>
    <div class="btn btn-warning"><i class="fa fa-shopping-cart"></i> BUY NOW</div>
  <% end %>
  </p>
<% end %>


<% if user_signed_in? && current_user.farmer == @product.farmer %>
  <%= link_to 'Edit', edit_product_path(@product) %>
<% end %>
<%= link_to 'Back', root_path %>


