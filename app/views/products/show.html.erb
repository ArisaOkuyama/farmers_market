<div class="jumbotron">
  <div class="row">
    <div class="col-md-4">
      <p><%= image_tag @product.picture , width: 300 %></p>
    </div>
    <div class="col-md-8">
      <h1><strong><%= @product.name %></strong></h1>
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <p>
        <strong>State:</strong>
        <%= @product.state %>
      </p>
      <p>
        <span>Farmer :    </span>
        <%= link_to farmer_path(@product.farmer) do %>
          <%= @product.farmer.farm_name %>
        <% end %>
      </p>
      <br>
      <% if @product.price %>
        <div class="m-4"><h2><%= number_to_currency @product.price %></h2></div>
        <p>
        <%= link_to new_order_path(product_id: @product.id) , class: "link-buy btn btn-info btn-block pull-right" do %>
          <i class="fa fa-shopping-cart"></i> BUY NOW
        <% end %>
        </p>
      <% end %>
      <% if user_signed_in? && current_user.farmer == @product.farmer %>
        <%= link_to 'Edit', edit_product_path(@product) %>
      <% end %>
    </div>
  </div>
  <br>
  <%= link_to 'Back', products_path(:search => {"category_id"=>""}), class: "btn btn-info"%>
</div>

