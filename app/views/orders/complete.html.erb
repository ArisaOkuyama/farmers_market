

<div class="row">
    <div class="col-md-12" %>
        <% @products.each do |x| %>
            <div class="card">
                <h5 class="card-header">Ordered date : <%= x.created_at.strftime("%Y-%m-%d") %></h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2" %>
                            <%= image_tag x.product.picture %>
                        </div>
                        <div class="col-md-10" %>
                            <h2><%= x.product.name %></h2><br>
                            Produced by : <%=  x.product.farmer.farm_name %><br>
                            Price :  $<%=  x.product.price %><br>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div> 
</div>
